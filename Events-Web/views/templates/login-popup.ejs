<div class="modal-dialog">
    <form ng-submit="login()">
        <!--Header-->
        <div class="modal-header">
            <button type="button" class="close" ng-click="cancel()">&times;</button>
            <h4 class="modal-title">Log In</h4>
        </div>
        <!--Body-->
        <div class="modal-body">
            <div class="form-group">
                <input ng-model="username" type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <input ng-model="password" type="password" class="form-control" placeholder="Password">
            </div>
        </div>
        <!--Footer-->
        <div class="modal-footer">
            <button type="submit" class="btn btn-success btn-block">Let's Go</button>
        </div>
    </form>
</div>
